<div class="box">
    <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
            <strong>{{ block.translate(app.request.locale).translatableFields.title|raw }}</strong>
        </h2>
        <hr>
        <h4 class="intro-text text-center">
            {{ block.translate(app.request.locale).translatableFields.description|raw }}
        </h4>
    </div>
    {% for categoryCollection in block.categoriesList %}
        <div class="col-sm-4 text-center">
            <img class="img-responsive" style="min-height: 210px" src="{% path categoryCollection.category.media, 'reference' %}" alt="">
            <h3>{{ categoryCollection.category.name }}</h3>
            <h5>
                {{ categoryCollection.category.description }}
            </h5>
        </div>
    {% endfor %}
</div>