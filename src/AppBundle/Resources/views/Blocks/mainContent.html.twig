{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>
                    {{ block.translate(app.request.locale).translatableFields.title|raw }}
                </strong>
            </h2>
            <hr>
            <img class="img-responsive img-border img-left" src="{{ asset('bundles/app/images/pic.jpg') }}" alt="">
            <p>
                {{ block.translate(app.request.locale).translatableFields.shortDescription|raw }}
            </p>
            <p>
                {{ block.translate(app.request.locale).translatableFields.description|raw }}
            </p>
        </div>
    </div>
{% endblock %}