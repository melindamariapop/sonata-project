<div class="box">
    <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
            <strong>{{ block.translate(app.request.locale).translatableFields.title }}</strong>
        </h2>
        <hr>
    </div>
    <div class="col-md-8">
        <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
        <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="{{ settings.mapUrl }}"></iframe>
    </div>
    <div class="col-md-4">
        <p>Phone:
            <strong>{{ settings.phone }}</strong>
        </p>
        <p>Mobile Phone:
            <strong>{{ settings.mobilePhone }}</strong>
        </p>
        <p>Email:
            <strong><a href="mailto:name@example.com">{{ settings.email }}</a></strong>
        </p>
        <p>Address:
            <strong>
                {{ block.translate(app.request.locale).translatableFields.address|raw }}
            </strong>
        </p>
    </div>
    <div class="clearfix"></div>
</div>