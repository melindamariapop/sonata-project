<div class="box">
    <div class="col-lg-12">
        <h1 class="intro-text">
            <strong>{{ settings.title }}</strong>
        </h1>
        <h2 class="intro-text">
            <strong>{{ settings.description }}</strong>
        </h2>
    </div>
    {% for faq in faqs %}
        <div class="col-lg-12">
            <h2>
                <small>{{ faq.question }}</small>
            </h2>
            <p>
                {{ faq.answer }}
            </p>
            <hr>
        </div>
    {% endfor %}
</div>